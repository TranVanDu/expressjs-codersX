extends ../layouts/comon
block content
	h2 Product
	.d-flex.align-items-center
		form.mt-5.ml-auto(action='' method='get',class="d-flex")
				input.form-control(type='text' name='q')
				button.btn.btn-success.ml-2 search
	hr
	.row
		each product in products
			.col-sm-6.col-rd-4.col-lg-3.mt-5
				.card
					img.card-img-top(src=product.image)
					.card-body
						h5.card-title(title=product.name)=product.name
						h6=product.email
						p.card-text= product.description
						span Price:
						span=product.price
						a(href="/cart/add/"+product.id class="btn btn-primary") Add
	nav.mt-5(aria-label='Page navigation example')
		ul.pagination.justify-content-end
			li.page-item.disabled
				a.page-link(href='#', tabindex='-1', aria-disabled='true') Previous
			li.page-item
				a.page-link(href='#') 1
			li.page-item
				a.page-link(href='#') 2
			li.page-item
				a.page-link(href='#') 3
			li.page-item
				a.page-link(href='#') ...
			li.page-item
				a.page-link(href='#') 24
			li.page-item
				a.page-link(href='#') 25
			li.page-item
				a.page-link(href='#') Next

